@model IEnumerable<SmartTable.Models.Restaurants>
@{
    ViewBag.Title = "Trang Chủ - Đặt bàn nhà hàng";
}

<div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h1 class="text-3xl font-bold text-blue-600 mb-4">
        Chào mừng bạn đến với Smart-Table!
    </h1>
    <p class="text-gray-600">
        Hệ thống đặt bàn thông minh của bạn đã sẵn sàng.
    </p>
</div>

<div class="container mx-auto max-w-7xl">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">
        <i class="fas fa-store-alt text-blue-600 mr-2"></i>
        Nhà hàng nổi bật
    </h2>

    @if (Model == null || !Model.Any())
    {
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <p class="text-gray-500">Chưa có nhà hàng nào được phê duyệt.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            @foreach (var restaurant in Model)
            {
                <a href="@Url.Action("RestaurantDetails", "Home", new { id = restaurant.restaurant_id })"
                   class="block bg-white rounded-lg shadow-lg overflow-hidden transition-transform transform hover:-translate-y-1 hover:shadow-xl">

                    <div class="h-48 overflow-hidden">
                        <img class="w-full h-full object-cover"
                             src="@(restaurant.Image ?? "https://via.placeholder.com/400x300.png?text=SmartTable")"
                             alt="Ảnh nhà hàng @restaurant.name">
                    </div>

                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-900 truncate" title="@restaurant.name">
                            @restaurant.name
                        </h3>
                        <p class="text-sm text-gray-600 mt-1 flex items-start">
                            <i class="fas fa-map-marker-alt w-4 mt-1 text-gray-400"></i>
                            <span class="ml-2 line-clamp-2">@restaurant.address</span>
                        </p>
                        <p class="text-sm text-gray-600 mt-2 flex items-center">
                            <i class="fas fa-clock w-4 text-gray-400"></i>
                            <span class="ml-2">@restaurant.opening_hours</span>
                        </p>

                        <div class="flex items-center mt-3">
                            <span class="text-yellow-500">
                                <i class="fas fa-star text-xs"></i>
                                <i class="fas fa-star text-xs"></i>
                                <i class="fas fa-star text-xs"></i>
                                <i class="fas fa-star text-xs"></i>
                                <i class="far fa-star text-xs"></i>
                            </span>
                            <span class="ml-2 text-xs text-gray-500">(120 đánh giá)</span>
                        </div>
                    </div>

                    <div class="border-t border-gray-100 p-4">
                        <span class="w-full text-center block px-4 py-2 bg-red-600 text-white font-semibold rounded-lg shadow-sm hover:bg-red-700 transition-colors">
                            Đặt bàn ngay
                        </span>
                    </div>
                </a>
            }
        </div>
    }
</div>