@model SmartTable.Models.ViewModels.SmartTableDetailViewModel
@{
    ViewBag.Title = Model.Restaurant.name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <style>
        .font-display {
            font-family: 'Playfair Display', serif;
        }

        /* Style cho Tab */
        .tab-link {
            padding: 1rem 1.5rem; /* py-4 px-6 */
            font-size: 1.125rem; /* text-lg */
            font-weight: 500; /* font-medium */
            color: rgb(107 114 128); /* text-gray-500 */
            border-bottom-width: 2px;
            border-color: transparent;
            transition-property: color, border-color;
            transition-duration: 200ms;
        }

            .tab-link:hover {
                border-color: rgb(59 130 246); /* hover:border-blue-500 */
                color: rgb(59 130 246); /* hover:text-blue-600 */
            }

            .tab-link.active {
                border-color: rgb(37 99 235); /* border-blue-600 */
                color: rgb(37 99 235); /* text-blue-600 */
            }

        .tab-content {
            display: none;
        }

            .tab-content.active {
                display: block;
            }
    </style>
}

<div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
    <div class="md:flex">
        <div class="md:flex-shrink-0 md:w-1/3">
            <img class="h-64 w-full object-cover"
                 src="@(Model.Restaurant.Image ?? "https://via.placeholder.com/400x300.png?text=SmartTable")"
                 alt="Ảnh bìa @Model.Restaurant.name">
        </div>
        <div class="p-8 flex flex-col justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 font-display mb-2">@Model.Restaurant.name</h1>
                <p class="text-gray-600 text-sm mb-4 flex items-start">
                    <i class="fas fa-map-marker-alt w-5 mt-1 text-blue-500"></i>
                    <span class="ml-2">@Model.Restaurant.address</span>
                </p>

                <div class="flex items-center mb-2">
                    <span class="text-yellow-500">
                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i>
                    </span>
                    <span class="ml-2 text-sm text-gray-500">(@Model.Reviews.Count đánh giá)</span>
                </div>

                <p class="text-gray-600 text-sm mb-4">
                    <i class="fas fa-clock w-5 text-blue-500"></i>
                    <span class="ml-2">Mở cửa: @Model.Restaurant.opening_hours</span>
                </p>
            </div>

            <a href="@Url.Action("DatBan", "DatBan", new { id = Model.Restaurant.restaurant_id })"
               class="lg:hidden w-full text-center px-6 py-3 bg-gradient-to-r from-orange-500 to-red-500 text-white font-semibold rounded-lg shadow hover:from-orange-600 hover:to-red-600 transition-transform transform hover:scale-105 text-lg">
                Đặt bàn ngay
            </a>
        </div>
    </div>
</div>

<div class="container mx-auto max-w-7xl px-6">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <div class="lg:col-span-2">
            <div class="bg-white rounded-t-lg shadow-md">
                <nav class="flex border-b border-gray-200">
                    <button class="tab-link active" data-tab="gioi-thieu">Giới thiệu</button>
                    <button class="tab-link" data-tab="menu">Menu</button>
                    <button class="tab-link" data-tab="danh-gia">Đánh giá (@Model.Reviews.Count)</button>
                </nav>
            </div>

            <div class="bg-white rounded-b-lg shadow-md p-6">
                <div id="gioi-thieu" class="tab-content active space-y-4">
                    <h3 class="text-xl font-semibold text-gray-800 font-display">Về nhà hàng @Model.Restaurant.name</h3>
                    <p class="text-gray-700 leading-relaxed">
                        @Model.Restaurant.description
                    </p>
                    <hr />
                    <h4 class="text-lg font-semibold text-gray-800">Thông tin chi tiết</h4>
                    <ul class="list-disc list-inside text-gray-700 space-y-1">
                        <li><span class="font-medium">Địa chỉ:</span> @Model.Restaurant.address</li>
                        <li><span class="font-medium">Giờ hoạt động:</span> @Model.Restaurant.opening_hours</li>
                    </ul>
                </div>

                <div id="menu" class="tab-content space-y-4">
                    <h3 class="text-xl font-semibold text-gray-800 font-display">Thực đơn đặc sắc</h3>
                    @if (Model.MenuItems == null || !Model.MenuItems.Any())
                    {
                        <p class="text-gray-500">Menu đang được cập nhật...</p>
                    }
                    else
                    {
                        foreach (var item in Model.MenuItems)
                        {
                            <div class="border rounded-lg p-4 flex justify-between items-center">
                                <div>
                                    <h4 class="font-semibold text-gray-800">@item.name</h4>
                                    <p class="text-sm text-gray-500">@item.description</p>
                                </div>
                                <span class="font-semibold text-blue-600 text-lg">@item.price.ToString("N0")đ</span>
                            </div>
                        }
                    }
                </div>

                <div id="danh-gia" class="tab-content space-y-6">
                    <h3 class="text-xl font-semibold text-gray-800 font-display">Đánh giá từ khách hàng</h3>
                    @if (Model.Reviews == null || !Model.Reviews.Any())
                    {
                        <p class="text-gray-500">Chưa có đánh giá nào cho nhà hàng này.</p>
                    }
                    else
                    {
                        foreach (var review in Model.Reviews)
                        {
                            <div class="border-b pb-4">
                                <div class="flex items-center mb-2">
                                    <i class="fas fa-user-circle text-2xl text-gray-400 mr-2"></i>
                                    <div>
                                        <h4 class="font-semibold text-gray-800">@review.Users.full_name</h4>
                                        <p class="text-xs text-gray-500">@review.created_at.Value.ToString("dd/MM/yyyy")</p>
                                    </div>
                                </div>
                                <div class="flex items-center mb-2">
                                    <span class="text-yellow-500">
                                        @for (int i = 0; i < review.rating; i++)
                                        {<i class="fas fa-star"></i>}
                                        @for (int i = 0; i < (5 - review.rating); i++)
                                        {<i class="far fa-star"></i>}
                                    </span>
                                </div>
                                <p class="text-gray-700">@review.comment</p>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="lg:col-span-1 hidden lg:block">
            <div class="bg-white rounded-lg shadow-lg p-6 sticky top-28">
                <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center font-display">
                    Tiến hành đặt bàn
                </h3>

                @using (Html.BeginForm("DatBan", "DatBan", FormMethod.Get, new { @class = "space-y-4" }))
                {
                    @Html.Hidden("id", Model.Restaurant.restaurant_id)

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Số lượng khách</label>
                        <input type="number" name="NumberOfPeople" min="1" value="2" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Ngày đến</label>
                        <input type="date" name="ReservationDate" required value="@DateTime.Now.ToString("yyyy-MM-dd")"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>

                    <button type="submit"
                            class="w-full mt-4 px-6 py-3 bg-red-600 text-white font-semibold rounded-lg shadow-lg hover:bg-red-700 hover:scale-105 transition-transform text-lg">
                        TIẾP TỤC ĐẶT BÀN
                    </button>
                }
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tabs = document.querySelectorAll('.tab-link');
            const contents = document.querySelectorAll('.tab-content');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const targetId = tab.dataset.tab;

                    // Cập nhật trạng thái
                    tabs.forEach(t => t.classList.remove('active', 'text-blue-600', 'border-blue-600'));
                    contents.forEach(c => c.classList.add('hidden'));

                    tab.classList.add('active', 'text-blue-600', 'border-blue-600');
                    document.getElementById(targetId).classList.remove('hidden');
                });
            });
        });
    </script>
}