@model SmartTable.Models.Restaurants
@{
    ViewBag.Title = "Thông Tin Tài Khoản Đối Tác";
    Layout = "~/Views/Shared/_BusinessLayout.cshtml";
}

<div class="p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-4">
        <i class="fas fa-store text-blue-600 mr-2"></i> Hồ sơ của tôi (Thông tin Nhà hàng)
    </h1>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative mb-4" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }
    else if (Model == null)
    {
        <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative mb-4" role="alert">
            Tài khoản đối tác của bạn đã được tạo, nhưng chưa có dữ liệu nhà hàng được liên kết. Vui lòng liên hệ Admin.
        </div>
    }
    else
    {
        <div class="bg-white p-6 rounded-lg shadow-md space-y-4 max-w-2xl">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">@Model.name</h2>
            <dl class="space-y-3">
                <div class="flex justify-between border-b pb-2">
                    <dt class="text-gray-500">Địa chỉ</dt>
                    <dd class="font-medium">@Model.address</dd>
                </div>
                <div class="flex justify-between border-b pb-2">
                    <dt class="text-gray-500">Giờ mở cửa</dt>
                    <dd class="font-medium">@Model.opening_hours</dd>
                </div>
                <div class="flex justify-between border-b pb-2">
                    <dt class="text-gray-500">Sức chứa tối đa</dt>
                    <dd class="font-medium">@Model.max_tables bàn</dd>
                </div>
                <div class="flex justify-between border-b pb-2">
                    <dt class="text-gray-500">Trạng thái duyệt</dt>
                    <dd class="font-medium @(Model.is_approved == true ? "text-green-600" : "text-yellow-600")">@(Model.is_approved == true ? "Đã duyệt" : "Chờ duyệt")</dd>
                </div>
            </dl>
        </div>

        <div class="pt-4 border-t mt-8 text-right">
            <a href="@Url.Action("EditRestaurant", "BusinessHome", new { id = Model.restaurant_id })"
               class="inline-flex items-center justify-center py-2 px-6 border border-transparent shadow-md text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition transform hover:scale-105">
                <i class="fas fa-edit mr-2"></i> Chỉnh sửa thông tin
            </a>
        </div>
    }

</div>