<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link href="~/Content/output.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body class="bg-gray-50 font-roboto">

    @if (!(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" &&
           new[] { "Login", "Register", "ForgotPassword" }.Contains(ViewContext.RouteData.Values["action"]?.ToString())))
    {
    <header class="bg-blue-600 text-white shadow-md sticky top-0 z-50">
        <div class="container mx-auto px-4 py-3 flex justify-between items-center">
            <a href="@Url.Action("Index", "Home")" class="text-2xl font-bold hover:text-amber-300 transition-colors duration-300">Smart-Table</a>

            <nav class="hidden md:flex items-center space-x-6 font-medium">
                <a href="@Url.Action("Index","Home")" class="hover:text-amber-300 transition-colors duration-300">Trang chủ</a>

                <button id="nearbyBtn" class="hover:text-amber-300 transition-colors duration-300">
                    <i class="fas fa-location-dot mr-1"></i> Nhà hàng gần bạn
                </button>

                <a href="#" class="hover:text-amber-300 transition-colors duration-300">Nhà hàng uy tín</a>
                <a href="#" class="hover:text-amber-300 transition-colors duration-300">Ưu đãi hot</a>
                <a href="@Url.Action("Index","Business")" class="hover:text-amber-300 transition-colors duration-300">Đăng ký đối tác</a>
            </nav>

            <div class="flex items-center space-x-3">
                <div class="relative w-full max-w-md">
                    <form method="get" action="@Url.Action("Index", "Home")"
                          class="flex overflow-hidden rounded-xl shadow-sm bg-white border border-gray-200 transition-all duration-300 focus-within:ring-2 focus-within:ring-blue-300">

                        <select name="city" class="px-3 py-2 bg-gray-100 text-gray-700 border-r border-gray-300 focus:outline-none">
                            <option>Hà Nội</option>
                            <option>TP. HCM</option>
                            <option>Đà Nẵng</option>
                        </select>

                        <input type="text" name="search" placeholder="Bạn muốn đặt chỗ ở đâu?"
                               class="flex-1 px-4 py-2 focus:outline-none text-gray-700 placeholder-gray-400"
                               autocomplete="off" id="searchBox">

                        <button type="submit"
                                class="px-4 bg-gradient-to-r from-blue-500 to-indigo-500
                                    hover:from-blue-600 hover:to-indigo-600
                                    text-white shadow-md hover:shadow-lg
                                    transition-all duration-200 flex items-center justify-center">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>

                <div>
                    @if (Session["user"] == null)
                        {
                    <div class="flex space-x-2">
                        <a href="@Url.Action("Login", "Account")"
                           class="px-4 py-2 bg-white text-blue-600 font-medium rounded-lg shadow hover:bg-blue-50 transition-colors duration-300 flex items-center space-x-1">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Login</span>
                        </a>
                        <a href="@Url.Action("Register", "Account")"
                           class="px-4 py-2 bg-gradient-to-r from-orange-500 to-red-500
                                    text-white font-medium rounded-lg shadow hover:from-orange-600 hover:to-red-600
                                    transition-all duration-300 flex items-center space-x-1">
                            <i class="fas fa-user-plus"></i>
                            <span>Register</span>
                        </a>
                    </div>
                        }
                        else
                        {
                            var user = (SmartTable.Models.User)Session["user"];
                    <div class="relative">
                        <button id="profileMenuToggle" class="flex items-center space-x-2 hover:text-amber-300 transition-colors duration-300">
                            <i class="fas fa-user-circle text-2xl"></i>
                            <span>@user.full_name</span>
                            <i class="fas fa-chevron-down text-xs ml-1"></i>
                        </button>
                        <ul id="dropdownMenu" class="hidden absolute bg-white border rounded-lg shadow-lg mt-2 py-2 right-0 w-48 text-gray-800">
                            <li><a href="@Url.Action("AccountInfo", "Account")" class="flex items-center space-x-3 px-4 py-2 hover:bg-gray-100 transition-colors duration-200"><i class="fas fa-user-edit w-5 text-center"></i><span>Profile</span></a></li>
                            <li><a href="@Url.Action("DanhSachBanDaDat", "DatBan")" class="flex items-center space-x-3 px-4 py-2 hover:bg-gray-100 transition-colors duration-200"><i class="fas fa-calendar-check w-5 text-center"></i><span>Bàn đã đặt</span></a></li>
                            <li><a href="@Url.Action("Logout", "Account")" class="flex items-center space-x-3 px-4 py-2 hover:bg-gray-100 transition-colors duration-200 text-red-500"><i class="fas fa-sign-out-alt w-5 text-center"></i><span>Đăng xuất</span></a></li>
                        </ul>
                    </div>
                        }
                </div>
            </div>
        </div>
    </header>
    }

    <div class="container mx-auto py-6">
        @RenderBody()
    </div>

    <div id="nearbyModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-lg shadow-xl w-full max-w-lg">
            <div class="flex justify-between items-center border-b p-4">
                <h3 class="text-xl font-medium text-gray-800">
                    <i class="fas fa-location-dot text-blue-500 mr-2"></i>Nhà hàng gần bạn
                </h3>
                <button id="nearbyModalClose" class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
            <div id="nearbyList" class="p-4 space-y-3 max-h-96 overflow-y-auto">
            </div>
        </div>
    </div>

    <button id="chatOpen" class="fixed bottom-5 right-5 w-14 h-14 rounded-full bg-blue-600 text-white shadow-lg hover:bg-blue-700 flex items-center justify-center z-50 transition-colors">
        <i class="fas fa-comments text-xl"></i>
    </button>

    <div id="chatContainer" class="hidden fixed bottom-5 right-5 w-96 bg-white shadow-2xl rounded-2xl overflow-hidden border border-gray-200 z-50">
        <div class="bg-blue-600 text-white px-4 py-2 flex justify-between items-center">
            <span><i class="fas fa-robot mr-2"></i>Smart AI Assistant</span>
            <button id="chatClose" class="text-white hover:text-gray-200">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div id="chatMessages" class="h-72 overflow-y-auto p-4 space-y-2 bg-gray-50"></div>
        <div class="p-3 border-t bg-white flex space-x-2">
            <input type="text" id="chatInput" class="flex-1 border rounded-lg px-3 py-2 focus:outline-none focus:ring-1 focus:ring-blue-500" placeholder="Nhập tin nhắn..." />
            <button id="chatSend" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors w-14 flex items-center justify-center">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/main")
    @RenderSection("Scripts", required: false)

</body>
</html>