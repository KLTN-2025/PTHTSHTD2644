<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Smart Table</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"> @* Cập nhật FontAwesome nếu cần *@

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>

<body class="bg-gray-50 font-roboto text-base text-gray-800 antialiased">

    @if (!(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" &&
           new[] { "Login", "Register", "ForgotPassword" }.Contains(ViewContext.RouteData.Values["action"]?.ToString())))
    {
        <header class="bg-blue-600 text-white shadow-md sticky top-0 z-3 text-sm">
            <div class="container mx-auto max-w-7xl px-6 py-2 flex justify-between items-center h-16 border-b border-blue-500 border-opacity-50">
                <!-- Logo -->
                <a href="@Url.Action("Index", "Home")"
                   class="text-2xl font-extrabold hover:text-amber-300 transition-all duration-300 flex-shrink-0 mr-8 transform hover:scale-105">
                    Smart-Table
                </a>

                <!-- Menu chính -->
                <nav class="menu-gap flex flex-grow justify-start items-center font-medium text-sm">
                    @* Added menu-gap, removed space/gap *@
                    <a href="@Url.Action("Index","Home")" class="menu-link-header whitespace-nowrap">Trang chủ</a>
                    <button id="nearbyBtnDesktop" class="menu-link-header flex items-center space-x-1 whitespace-nowrap">
                        <i class="fas fa-location-dot text-xs"></i>
                        <span>Nhà hàng gần bạn</span>
                    </button>
                    <a href="#" class="menu-link-header whitespace-nowrap">Nhà hàng uy tín</a>
                    <a href="#" class="menu-link-header whitespace-nowrap">Ưu đãi hot</a>
                    <a href="@Url.Action("Index","Business")" class="menu-link-header whitespace-nowrap">Đăng ký đối tác</a>
                </nav>

                <!-- Khu vực đăng nhập / đăng ký -->
                <div class="flex items-center space-x-3 flex-shrink-0">
                    @if (Session["user"] == null)
                    {
                        <a href="@Url.Action("Login", "Account")"
                           class="px-4 py-2 bg-white text-blue-600 font-semibold rounded-full shadow hover:bg-blue-50 transition text-sm flex items-center space-x-2 whitespace-nowrap transform hover:scale-105">
                            <i class="fas fa-sign-in-alt"></i> <span>Login</span>
                        </a>
                        <a href="@Url.Action("Register", "Account")"
                           class="px-4 py-2 bg-gradient-to-r from-orange-500 to-red-500 text-white font-semibold rounded-full shadow hover:from-orange-600 hover:to-red-600 transition text-sm flex items-center space-x-2 whitespace-nowrap transform hover:scale-105">
                            <i class="fas fa-user-plus"></i> <span>Register</span>
                        </a>
                    }
                    else
                    {
                        var users = (SmartTable.Models.Users)Session["user"];
                        <div class="relative">
                            <button id="profileMenuToggleDesktop" class="flex items-center space-x-1.5 hover:text-amber-300 transition-colors duration-300">
                                <i class="fas fa-user-circle text-2xl"></i>
                                <span class="text-sm font-semibold whitespace-nowrap">@users.full_name</span>
                                <i class="fas fa-chevron-down text-xs ml-1"></i>
                            </button>
                            <ul id="dropdownMenuDesktop" class="hidden absolute bg-white border border-gray-200 rounded-lg shadow-xl mt-3 py-1 right-0 w-48 text-gray-800 z-10 text-sm">
                                <li><a href="@Url.Action("AccountInfo", "Account")" class="flex items-center space-x-2 px-3 py-1.5 hover:bg-gray-100 transition"><i class="fas fa-user-edit w-4 text-center text-blue-500"></i><span>Profile</span></a></li>
                                <li><a href="@Url.Action("DanhSachBanDaDat", "DatBan")" class="flex items-center space-x-2 px-3 py-1.5 hover:bg-gray-100 transition"><i class="fas fa-calendar-check w-4 text-center text-green-500"></i><span>Bàn đã đặt</span></a></li>
                                <li><a href="@Url.Action("Logout", "Account")" class="flex items-center space-x-2 px-3 py-1.5 hover:bg-gray-100 transition text-red-600"><i class="fas fa-sign-out-alt w-4 text-center"></i><span>Đăng xuất</span></a></li>
                            </ul>
                        </div>
                    }
                </div>
            </div>

            <!-- Thanh tìm kiếm (nằm dưới menu) -->
            <script src="https://cdn.tailwindcss.com"></script>

            <div class="bg-blue-600">
                <div class="container mx-auto max-w-7xl px-6 py-3 flex justify-center items-center">
                    <form method="get" action="@Url.Action("Index", "Home")"
                          class="flex items-center overflow-hidden rounded-md bg-white shadow-inner border border-transparent h-10 w-full max-w-7xl relative">

                        <div class="relative h-full">
                            <select name="city"
                                    class="pl-4 pr-8 bg-gray-50 text-gray-700 focus:outline-none text-sm rounded-l-md cursor-pointer appearance-none h-full border-r border-gray-300 font-medium">
                                <option>HN</option>
                                <option selected>HCM</option>
                                <option>ĐN</option>
                            </select>
                        </div>

                        <input type="text" name="search" placeholder="Bạn muốn đặt chỗ ở đâu?"
                               class="flex-grow px-4 bg-white focus:outline-none text-gray-800 placeholder-gray-500 text-sm h-full w-full"
                               autocomplete="off" id="searchBox">

                        <button type="submit"
                                class="w-25 h-10  px-5 bg-red-600 hover:bg-red-700 text-white font-semibold transition-colors flex items-center justify-center text-sm flex-shrink-0 rounded-r-md">
                            @* Đã đổi w-14 thành w-32 và thêm px-5 *@
                            <i class="fas fa-search mr-2 text-2"></i> Tìm kiếm
                        </button>
                    </form>
                </div>
            </div>



        </header>

    }

    <main class="container mx-auto max-w-7xl py-8 px-6">
        @RenderBody()
    </main>

    <button id="chatOpen" class="fixed bottom-6 right-6 w-14 h-14 rounded-full bg-blue-600 text-white shadow-lg hover:bg-blue-700 flex items-center justify-center z-[51] transition-colors transform hover:scale-110">
        <i class="fas fa-comments text-xl"></i>
    </button>
    <div id="chatContainer" class="hidden fixed bottom-[85px] right-6 w-80 sm:w-96 bg-white shadow-2xl rounded-xl overflow-hidden border border-gray-200 z-[52]">
        <div class="bg-blue-600 text-white px-4 py-2 flex justify-between items-center cursor-move">
            <span><i class="fas fa-robot mr-2"></i>Smart AI Assistant</span>
            <button id="chatClose" class="text-white hover:text-gray-200 p-1"><i class="fas fa-times"></i></button>
        </div>
        <div id="chatMessages" class="h-64 sm:h-72 overflow-y-auto p-4 space-y-3 bg-gray-50"></div>
        <div class="p-3 border-t bg-white flex space-x-2">
            <input type="text" id="chatInput" class="flex-1 border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm" placeholder="Nhập tin nhắn..." />
            <button id="chatSend" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors w-14 flex items-center justify-center flex-shrink-0">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>

    <div id="nearbyModal" class="hidden fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-[60] p-4">
        <div class="bg-white rounded-lg shadow-xl w-full max-w-lg animate-fade-in-down">
            <div class="flex justify-between items-center border-b p-4">
                <h3 class="text-lg font-semibold text-gray-800">
                    <i class="fas fa-location-dot text-blue-500 mr-2"></i>Nhà hàng gần bạn
                </h3>
                <button id="nearbyModalClose" class="text-gray-400 hover:text-gray-600 transition-colors p-1">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <div id="nearbyList" class="p-4 space-y-3 max-h-[60vh] overflow-y-auto">
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/main")
    @RenderSection("Scripts", required: false)

</body>
</html>