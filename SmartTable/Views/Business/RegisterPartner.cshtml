@model SmartTable.Models.ViewModels.PartnerRegistrationViewModel
@{
    ViewBag.Title = "Biểu mẫu Đăng ký Đối tác - SmartTable";
    Layout = "~/Views/Shared/_BusinessLayout.cshtml";
}

@section styles {
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .font-display {
            font-family: 'Playfair Display', serif;
        }

        /* Đã xóa các class lỗi (.input-icon-field, .label) và sẽ dùng trực tiếp trong HTML */
        .required:after {
            content: " *";
            color: #ef4444;
        }
    </style>
}

<div class="bg-gray-50 py-12">
    <div class="max-w-5xl mx-auto px-4">

        <div class="text-center mb-10">
            <h1 class="font-display text-4xl font-bold text-gray-800 mb-3">Đăng ký Đối tác Smart-Table</h1>
            <p class="text-gray-600 text-lg">
                Hãy cùng Smart-Table phát triển thương hiệu ẩm thực của bạn.
            </p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6 max-w-lg mx-auto" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6 max-w-lg mx-auto" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
        @Html.ValidationSummary(false, "", new { @class = "text-red-600 text-sm bg-red-100 p-3 rounded-md mb-6" })


        @using (Html.BeginForm("RegisterPartner", "Business", FormMethod.Post, new { @class = "space-y-8" }))
        {
            @Html.AntiForgeryToken()

            <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-100 space-y-6">
                <h2 class="text-xl font-semibold text-gray-800 border-b pb-4 mb-6">1. Thông tin liên hệ và Cơ sở</h2>

                <p class="text-gray-500 text-xs">Lưu ý: Các trường có dấu * là bắt buộc.</p>

                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1 required" for="RestaurantName">Tên Nhà hàng</label>
                        @Html.TextBoxFor(m => m.RestaurantName, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500", required = "required", placeholder = "VD: Nhà hàng Hảo Vị" })
                        @Html.ValidationMessageFor(m => m.RestaurantName, "", new { @class = "text-red-500 text-xs mt-1" })
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1 required" for="Email">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500", type = "email", required = "required", placeholder = "Email liên hệ chính" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-red-500 text-xs mt-1" })
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-1 required" for="Address">Địa chỉ Nhà hàng</label>
                        @Html.TextBoxFor(m => m.Address, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500", required = "required", placeholder = "Số nhà, tên đường..." })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-red-500 text-xs mt-1" })
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1 required" for="City">Tỉnh/Thành phố</label>
                        @Html.TextBoxFor(m => m.City, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500", required = "required", placeholder = "VD: Hồ Chí Minh" })
                    </div>
                    <div>
                        <label class="label required" for="BranchCount">Số chi nhánh</label>
                        @Html.TextBoxFor(m => m.BranchCount, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500", type = "number", required = "required", min = "0" })
                    </div>
                </div>

                <hr class="my-6 border-gray-200">

                <div class="grid md:grid-cols-3 gap-6">
                    <div>
                        <label class="label required" for="ContactName">Tên người liên hệ</label>
                        @Html.TextBoxFor(m => m.ContactName, new { @class = "input-field", required = "required" })
                    </div>
                    <div>
                        <label class="label required" for="ContactPhone">Số điện thoại</label>
                        @Html.TextBoxFor(m => m.ContactPhone, new { @class = "input-field", type = "tel", required = "required" })
                    </div>
                    <div>
                        <label class="label required" for="ContactRole">Chức vụ tại Nhà hàng</label>
                        @Html.TextBoxFor(m => m.ContactRole, new { @class = "input-field", required = "required", placeholder = "VD: Quản lý, Chủ sở hữu" })
                    </div>
                </div>
            </div>

            <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-100 space-y-6">
                <h2 class="text-xl font-semibold text-gray-800 border-b pb-4 mb-6">2. Dịch vụ & Phong cách ẩm thực</h2>

                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label class="label required" for="ServiceDescription">Loại hình dịch vụ</label>
                        @Html.TextBoxFor(m => m.ServiceDescription, new { @class = "input-field", placeholder = "VD: Buffet lẩu nướng hải sản, Gọi món Việt..." })
                    </div>
                    <div>
                        <label class="label required" for="CuisineStyle">Phong cách ẩm thực</label>
                        @Html.TextBoxFor(m => m.CuisineStyle, new { @class = "input-field", placeholder = "VD: Fusion, Ẩm thực Hàn Quốc..." })
                    </div>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label class="label required">Kiểu phục vụ</label>
                        <div class="flex flex-wrap gap-x-6 gap-y-3 text-sm pt-2">
                            <label class="flex items-center"><input type="checkbox" name="ServiceTypes" value="Gọi món" class="form-checkbox mr-2">Gọi món</label>
                            <label class="flex items-center"><input type="checkbox" name="ServiceTypes" value="Buffet" class="form-checkbox mr-2">Buffet</label>
                            <label class="flex items-center"><input type="checkbox" name="ServiceTypes" value="Băng chuyền" class="form-checkbox mr-2">Băng chuyền</label>
                            @Html.TextBoxFor(m => m.ServiceTypeOther, new { @class = "w-40 px-2 py-1 border border-gray-300 rounded-md text-sm", placeholder = "Khác..." })
                        </div>
                    </div>

                    <div>
                        <label class="label required">Hóa đơn trung bình/người</label>
                        <div class="space-y-2 pt-2">
                            <label class="flex items-center">@Html.RadioButtonFor(m => m.AverageBill, "Dưới 150K", new { @class = "form-radio mr-2" }) Dưới 150K</label>
                            <label class="flex items-center">@Html.RadioButtonFor(m => m.AverageBill, "150K - 250K", new { @class = "form-radio mr-2" }) 150K - 250K</label>
                            <label class="flex items-center">@Html.RadioButtonFor(m => m.AverageBill, "250K - 500K", new { @class = "form-radio mr-2" }) 250K - 500K</label>
                            <label class="flex items-center">@Html.RadioButtonFor(m => m.AverageBill, "500K - 1.000K", new { @class = "form-radio mr-2" }) 500K - 1.000K</label>
                            <label class="flex items-center">@Html.RadioButtonFor(m => m.AverageBill, "> 1.000K", new { @class = "form-radio mr-2" }) > 1.000K</label>
                            <label class="flex items-center">@Html.RadioButtonFor(m => m.AverageBill, "Khác", new { @class = "form-radio mr-2" }) @Html.TextBoxFor(m => m.AverageBillOther, new { @class = "w-40 px-2 py-1 border border-gray-300 rounded-md text-sm ml-1", placeholder = "Mục khác..." })</label>
                        </div>
                    </div>
                </div>

                <div>
                    <label class="label required" for="SignatureDishes">Món đặc sắc</label>
                    @Html.TextAreaFor(m => m.SignatureDishes, new { @class = "input-field", rows = 4, placeholder = "Liệt kê 3-5 món nổi bật..." })
                </div>
            </div>

            <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-100 space-y-6">
                <h2 class="text-xl font-semibold text-gray-800 border-b pb-4 mb-6">3. Vận hành & Giờ giấc</h2>

                <div class="grid md:grid-cols-3 gap-6">
                    <div>
                        <label class="label required">Tổng số chỗ ngồi</label>
                        @Html.TextBoxFor(m => m.TotalSeats, new { @class = "input-field", type = "number", min = "1" })
                    </div>
                    <div>
                        <label class="label required">Ngày bắt đầu KD</label>
                        @Html.TextBoxFor(m => m.OpeningDate, "{0:yyyy-MM-dd}", new { @class = "input-field", type = "date" })
                    </div>
                    <div>
                        <label class="label required">Số tầng/khu vực</label>
                        @Html.TextBoxFor(m => m.FloorCount, new { @class = "input-field", placeholder = "VD: 2 tầng" })
                    </div>
                </div>

                <div class="grid md:grid-cols-3 gap-6">
                    <div>
                        <label class="label required">Giờ mở cửa / đóng cửa</label>
                        <div class="flex space-x-3">
                            @Html.TextBoxFor(m => m.OpeningTime, new { @class = "input-field", type = "time" })
                            @Html.TextBoxFor(m => m.ClosingTime, new { @class = "input-field", type = "time" })
                        </div>
                    </div>

                    <div>
                        <label class="label required">Khung giờ đông khách</label>
                        @Html.TextBoxFor(m => m.BusyHours, new { @class = "input-field", placeholder = "VD: Tối T7, Chủ Nhật" })
                    </div>

                    <div>
                        <label class="label required">Khung giờ vắng khách</label>
                        @Html.TextBoxFor(m => m.SlowHours, new { @class = "input-field", placeholder = "VD: Chiều T2–T4" })
                    </div>
                </div>
            </div> <!-- ✅ Đóng khối bg-white p-8... của phần Vận hành & Giờ giấc -->

            <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-100 space-y-6">
                <h2 class="text-xl font-semibold text-gray-800 border-b pb-4 mb-6">4. Mục tiêu & Bổ sung (Tùy chọn)</h2>

                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label class="label required" for="PartnershipGoal">Mong muốn hợp tác</label>
                        @Html.TextBoxFor(m => m.PartnershipGoal, new { @class = "input-field", placeholder = "VD: Tăng lượt đặt bàn vào giờ vắng khách" })
                    </div>
                    <div>
                        <label class="label required">Gói dịch vụ muốn chọn</label>
                        <div class="space-y-2 pt-2">
                            <label class="flex items-center">@Html.RadioButtonFor(m => m.ServicePackage, "Gói Bắt đầu", new { @class = "form-radio mr-2" }) Gói Bắt đầu</label>
                            <label class="flex items-center">@Html.RadioButtonFor(m => m.ServicePackage, "Gói Cốt lõi", new { @class = "form-radio mr-2" }) Gói Cốt lõi</label>
                        </div>
                    </div>
                </div>

                <div class="pt-4 space-y-4">
                    <h3 class="font-semibold text-gray-800 mb-2">Thông tin bổ sung</h3>
                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <label class="label" for="Website">Link website hoặc Facebook</label>
                            @Html.TextBoxFor(m => m.Website, new { @class = "input-field", type = "url" })
                        </div>
                        <div>
                            <label class="label" for="SpaceDescription">Mô tả thêm về không gian</label>
                            @Html.TextAreaFor(m => m.SpaceDescription, new { @class = "input-field", rows = 3, placeholder = "VD: Rộng rãi, có ca nhạc tối T6, ven sông Sài Gòn,..." })
                        </div>
                    </div>

                    <div class="pt-4 space-y-2">
                        <h3 class="font-semibold text-gray-800">Tiện ích tại Nhà hàng</h3>
                        <div class="grid grid-cols-2 md:grid-cols-3 gap-x-6 gap-y-2 text-sm">
                            <label class="flex items-center"><input type="checkbox" name="Amenities" value="Karaoke riêng" class="form-checkbox mr-2">Có phòng karaoke riêng</label>
                            <label class="flex items-center"><input type="checkbox" name="Amenities" value="Karaoke chung" class="form-checkbox mr-2">Có karaoke trong phòng ăn</label>
                            <label class="flex items-center"><input type="checkbox" name="Amenities" value="Tivi/Máy chiếu" class="form-checkbox mr-2">Có tivi, máy chiếu</label>
                            <label class="flex items-center"><input type="checkbox" name="Amenities" value="Loa mic" class="form-checkbox mr-2">Có loa mic, tổ chức sự kiện</label>
                            <label class="flex items-center"><input type="checkbox" name="Amenities" value="Khu vui chơi trẻ em" class="form-checkbox mr-2">Có khu vui chơi trẻ em</label>
                            <label class="flex items-center">@Html.TextBoxFor(m => m.AmenitiesOther, new { @class = "w-40 px-2 py-1 border border-gray-300 rounded-md text-sm", placeholder = "Khác..." })</label>
                        </div>
                    </div>
                </div>
            </div>


            <div class="mt-8 pt-6 text-center">
                <button type="submit" class="px-12 py-3 text-white font-semibold rounded-lg shadow-lg bg-red-600 hover:bg-red-700 transition-transform transform hover:scale-105 text-lg">
                    ✅ Gửi thông tin đăng ký
                </button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}