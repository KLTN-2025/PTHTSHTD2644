@model SmartTable.Models.Users
@{
    // Bạn có thể đặt chú thích ở đây nếu muốn
    ViewBag.Title = "Thông Tin Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Sử dụng layout chung
}

@* Phần CSS tùy chỉnh có thể giữ lại hoặc chuyển vào file CSS chung nếu muốn *@
@section styles {
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        .heading {
            font-family: 'Playfair Display', serif;
        }
        /* Các style khác nếu cần */
    </style>
}

<div class="max-w-2xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden p-8">
    <h1 class="heading text-3xl font-bold mb-8 text-center text-gray-800 border-b pb-4">
        <i class="fas fa-user-circle mr-2 text-blue-600"></i>Thông tin tài khoản
    </h1>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
            <span class="block sm:inline">@ViewBag.SuccessMessage</span>
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
            <span class="block sm:inline">@ViewBag.ErrorMessage</span>
        </div>
    }

    <dl class="space-y-6 text-gray-700">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-2 items-center border-t pt-6">
            <dt class="font-medium text-gray-500 flex items-center">
                <i class="fas fa-user w-5 mr-2 text-blue-500"></i>Họ và tên
            </dt>
            <dd class="md:col-span-2 font-semibold text-gray-900">@Model.full_name</dd>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-2 items-center border-t pt-6">
            <dt class="font-medium text-gray-500 flex items-center">
                <i class="fas fa-envelope w-5 mr-2 text-blue-500"></i>Email
            </dt>
            <dd class="md:col-span-2 font-semibold text-gray-900">@Model.email</dd>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-2 items-center border-t pt-6">
            <dt class="font-medium text-gray-500 flex items-center">
                <i class="fas fa-phone w-5 mr-2 text-blue-500"></i>Số điện thoại
            </dt>
            <dd class="md:col-span-2 font-semibold text-gray-900">@Model.phone</dd>
        </div>
    </dl>

    <div class="mt-10 pt-6 border-t text-center">
        <a href="@Url.Action("UpdateAccount", "Account")"
           class="inline-flex items-center justify-center py-3 px-6 border border-transparent shadow-md text-base font-medium rounded-lg text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-transform transform hover:scale-105">
            <i class="fas fa-edit mr-2"></i> Cập nhật thông tin
        </a>

        @* (Tùy chọn) Thêm nút/link đổi mật khẩu nếu cần *@
        @* <a href="@Url.Action("ChangePassword", "Account")"
               class="ml-4 inline-flex items-center text-sm font-medium text-gray-600 hover:text-blue-600">
                <i class="fas fa-key mr-1"></i> Đổi mật khẩu
            </a> *@
    </div>

</div>