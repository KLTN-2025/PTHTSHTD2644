@model SmartTable.Models.Users
@{
    ViewBag.Title = "Thông Tin Tài Khoản";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml"; // Sử dụng layout Profile mới
}

@* Phần CSS tùy chỉnh (font chữ) được đưa vào section styles *@
@section styles {
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        .heading {
            font-family: 'Playfair Display', serif;
        }
        .error-message {
            color: #dc2626; /* text-red-600 */
            font-size: 0.875rem; /* text-sm */
        }
    </style>
}

<div class="p-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-4 heading">
        Thông Tin Tài Khoản
    </h1>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
            @ViewBag.SuccessMessage
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
         <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }
    @Html.ValidationSummary(true, "", new { @class = "text-red-600 text-sm bg-red-100 p-3 rounded-md mb-6" })

    @using (Html.BeginForm("UpdateAccount", "Account", FormMethod.Post, new { @class = "space-y-6" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.user_id)
        @Html.HiddenFor(m => m.email) @* Giữ lại email để post, nhưng không hiển thị *@

        <div class="grid grid-cols-1 md:grid-cols-3 items-center">
            <label for="full_name" class="text-sm font-medium text-gray-600">Tên:</label>
            <div class="col-span-2 mt-1 md:mt-0">
                @Html.TextBoxFor(m => m.full_name, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Họ và tên của bạn" })
                @Html.ValidationMessageFor(m => m.full_name, "", new { @class = "error-message mt-1" })
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 items-center">
            <label for="email" class="text-sm font-medium text-gray-600">Email:</label>
            <div class="col-span-2">
                @Html.TextBoxFor(m => m.email, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 text-gray-500 cursor-not-allowed", @readonly = "readonly", title = "Email không thể thay đổi" })
                <small class="text-xs text-gray-500 mt-1">Email không thể thay đổi.</small>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 items-center">
            <label for="phone" class="text-sm font-medium text-gray-600">Số điện thoại:</label>
            <div class="col-span-2 mt-1 md:mt-0">
                 @Html.TextBoxFor(m => m.phone, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder = "Số điện thoại" })
                 @Html.ValidationMessageFor(m => m.phone, "", new { @class = "error-message mt-1" })
            </div>
        </div>
        
        <hr class="my-4" />

        <div>
            <label for="newPassword" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu mới (Để trống nếu không đổi)</label>
             <div class="relative">
                <i class="fas fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                <input type="password" name="newPassword" id="newPassword" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 pl-10" placeholder="••••••••" />
                @if (ViewBag.PasswordError != null)
                {
                    <p class="error-message mt-1">@ViewBag.PasswordError</p>
                }
            </div>
        </div>

        <div>
            <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Xác nhận mật khẩu mới</label>
             <div class="relative">
                 <i class="fas fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                <input type="password" name="confirmPassword" id="confirmPassword" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 pl-10" placeholder="••••••••" />
            </div>
        </div>

        <div class="flex justify-end pt-4 border-t mt-8">
            <button type="submit" class="px-6 py-2 bg-red-600 text-white font-semibold rounded-lg shadow hover:bg-red-700 transition-colors">
                Cập nhật
            </button>
        </div>
    } @* <-- Đóng @using (Html.BeginForm) *@
</div>