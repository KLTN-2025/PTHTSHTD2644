@{
    ViewBag.Title = "Quản lý mật khẩu";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml"; // Dùng layout Profile
}

<div class="p-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-4 heading">
        Đổi mật khẩu
    </h1>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
            @ViewBag.SuccessMessage
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "space-y-6" }))
    {
        @Html.AntiForgeryToken()

        <div class="grid grid-cols-1 md:grid-cols-3 items-center">
            <label for="oldPassword" class="text-sm font-medium text-gray-600">Mật khẩu cũ:</label>
            <div class="col-span-2">
                <input type="password" name="oldPassword" id="oldPassword" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 items-center">
            <label for="newPassword" class="text-sm font-medium text-gray-600">Mật khẩu mới:</label>
            <div class="col-span-2">
                <input type="password" name="newPassword" id="newPassword" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 items-center">
            <label for="confirmPassword" class="text-sm font-medium text-gray-600">Xác nhận mật khẩu mới:</label>
            <div class="col-span-2">
                <input type="password" name="confirmPassword" id="confirmPassword" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
            </div>
        </div>

        <div class="flex justify-end pt-4 border-t mt-8">
            <button type="submit" class="px-6 py-2 bg-red-600 text-white font-semibold rounded-lg shadow hover:bg-red-700 transition-colors">
                Đổi mật khẩu
            </button>
        </div>
    }
</div>